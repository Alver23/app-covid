{
  "preset": "jest-preset-angular",
  "roots": ["<rootDir>/src/app/"],
  "testMatch": ["**/+(*.)+(spec).+(ts)"],
  "setupFilesAfterEnv": ["<rootDir>/src/test.ts"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*ts",
    "!**/*.module.ts",
    "!**/*-mock.ts"
  ],
  "coveragePathIgnorePatterns": [
    "src/app/build-specifics/",
    "src/environments/"
  ],
  "coverageDirectory": "coverage"
}
